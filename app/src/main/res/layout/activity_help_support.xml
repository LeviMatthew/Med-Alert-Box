<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medalertboxbacground"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Page Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help  Support"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- FAQ Button -->
        <TextView
            android:id="@+id/btnFaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:text="❓ Frequently Asked Questions"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Troubleshooting Button -->
        <TextView
            android:id="@+id/btnTroubleshooting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            android:text="🛠 Troubleshooting Tips"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Contact Support Section -->
        <TextView
            android:id="@+id/tvContactSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📞 Contact Support"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <!-- Email Support -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: support@example.com"
            android:autoLink="email"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Phone Support -->
        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone: +1 123 456 7890"
            android:autoLink="phone"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Social Media -->
        <TextView
            android:id="@+id/tvSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Social: @MyAppSupport (Twitter, Facebook)"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />


        <!-- Submit Feedback Button -->
        <Button
            android:id="@+id/btnSubmitFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Feedback"
            android:backgroundTint="@color/blue"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- Back to Dashboard -->
        <Button
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Dashboard"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
