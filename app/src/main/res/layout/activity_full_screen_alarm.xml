<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="20dp"
    android:gravity="center">

    <!-- Alarm message text (e.g., medication name or reminder) -->
    <TextView
        android:id="@+id/tvAlarmMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time to take your medication!"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>

    <!-- Snooze Button -->
    <Button
        android:id="@+id/btnSnooze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snooze"
        android:textColor="#FFFFFF"
        android:background="@color/white"
        android:layout_below="@id/tvAlarmMessage"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:padding="15dp"/>

    <!-- Stop Button -->
    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:textColor="#FFFFFF"
        android:background="@color/white"
        android:layout_below="@id/btnSnooze"
        android:layout_centerHorizontal="true"
        android:padding="15dp"/>

</RelativeLayout>
