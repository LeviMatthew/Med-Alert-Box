<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollViewPrivacySettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/medalertboxbacground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvPrivacySettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="24dp" />

        <!-- Account Details Section -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnUpdateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Account"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- Privacy Settings Section -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchProfileVisibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Profile Visible"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchShareActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share Activity with Caregivers"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Home Button -->
        <Button
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
